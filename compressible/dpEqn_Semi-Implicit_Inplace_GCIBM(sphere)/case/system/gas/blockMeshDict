FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1.0; // Scale the domain to 8m x 8m x 16m

vertices
(
    (-4 -4 -4)
    ( 4 -4 -4)
    ( 4  4 -4)
    (-4  4 -4)
    (-4 -4  12)
    ( 4 -4  12)
    ( 4  4  12)
    (-4  4  12)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (64 64 128) simpleGrading (1 1 1)
);

boundary
(
    TOP
    {
        type patch;
        faces
        (
            (4 5 6 7)
        );
    }

    BOTTOM
    {
        type patch;
        faces
        (
            (0 3 2 1)
        );
    }

    FRONT
    {
        type wall;
        faces
        (
            (1 5 4 0)
        );
    }

    BACK
    {
        type wall;
        faces
        (
            (3 7 6 2)
        );
    }

    LEFT
    {
        type wall;
        faces
        (
            (0 4 7 3)
        );
    }

    RIGHT
    {
        type wall;
        faces
        (
            (2 6 5 1)
        );
    }
);


