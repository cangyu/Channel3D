FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    TOP
    {
        type            advective;
        field           T;
        phi             USn;
        fieldInf        300;
        value           $internalField;
    }

    BOTTOM
    {
        type            fixedValue;
        value           uniform 300;
    }

    FRONT
    {
        type            empty;
    }

    BACK
    {
        type            empty;
    }

    LEFT
    {
        type            zeroGradient;
    }

    RIGHT
    {
        type            zeroGradient;
    }
}

